@using CarRentalMvc.Models
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <!-- Fleet Management (Column 1) -->
    <div class="lg:col-span-2">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-semibold text-gray-800">Manage Fleet</h2>
            <button id="add-car-btn" class="bg-green-600 text-white py-2 px-4 rounded-md font-semibold hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition">
                <ion-icon name="add-circle-outline"></ion-icon> Add New Car
            </button>
        </div>
        <div class="bg-white rounded-lg shadow-lg overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Car</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price/Day</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody id="fleet-table-body" class="bg-white divide-y divide-gray-200">
                    @foreach (var car in Model.Fleet)
                    {
                        <tr class="car-row">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <img class="h-10 w-10 rounded-full object-cover" src="@car.Img" alt="@car.Name">
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900 car-name">@car.Name</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900 car-type">@car.Type</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-medium text-gray-900 car-price">@car.Price.ToString("F2")</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <!-- These data attributes will be read by JavaScript -->
                                <button class="edit-car-btn text-blue-600 hover:text-blue-900 mr-3"
                                        data-id="@car.Id"
                                        data-name="@car.Name"
                                        data-type="@car.Type"
                                        data-price="@car.Price"
                                        data-img="@car.Img">
                                    Edit
                                </button>
                                <!-- Delete is a form POST for security -->
                                <form asp-action="DeleteCar" asp-route-id="@car.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this car?');">
                                    <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Booking Management (Column 2) -->
    <div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Manage Bookings</h2>
        <div id="booking-list" class="bg-white rounded-lg shadow-lg p-4 space-y-4 max-h-[600px] overflow-y-auto">
             @foreach (var booking in Model.Bookings.OrderBy(b => b.Status == "Pending" ? 0 : 1).ThenBy(b => b.PickupDate))
            {
                var statusColor = booking.Status == "Confirmed" ? "text-green-600" : (booking.Status == "Pending" ? "text-yellow-600" : "text-red-600");
                var statusIcon = booking.Status == "Confirmed" ? "checkmark-circle-outline" : (booking.Status == "Pending" ? "time-outline" : "close-circle-outline");
                
                <div class="border border-gray-200 rounded-lg p-4 shadow-sm">
                    <div class="flex justify-between items-center mb-2">
                        <h4 class="font-semibold text-gray-900">@booking.CarName</h4>
                        <span class="font-bold text-sm @statusColor">
                            <ion-icon name="@statusIcon" class="text-base"></ion-icon>
                            @booking.Status
                        </span>
                    </div>
                    <p class="text-sm text-gray-600"><strong>User:</strong> @booking.UserName (@booking.UserEmail)</p>
                    <p class="text-sm text-gray-600"><strong>Dates:</strong> @booking.PickupDate.ToShortDateString() to @booking.DropoffDate.ToShortDateString()</p>
                    <p class="text-sm font-semibold text-gray-800"><strong>Total:</strong> $@booking.Total.ToString("F2")</p>

                    <div class="flex justify-end space-x-2 mt-3">
                        @if (booking.Status == "Pending")
                        {
                            <form asp-action="CancelBooking" asp-route-id="@booking.Id" method="post" class="inline">
                                <button type="submit" class="text-xs bg-red-100 text-red-700 py-1 px-2 rounded hover:bg-red-200">Cancel</button>
                            </form>
                            <form asp-action="ConfirmBooking" asp-route-id="@booking.Id" method="post" class="inline">
                                <button type="submit" class="text-xs bg-green-100 text-green-700 py-1 px-2 rounded hover:bg-green-200">Confirm</button>
                            </form>
                        }
                        @if (booking.Status == "Confirmed")
                        {
                            <form asp-action="CancelBooking" asp-route-id="@booking.Id" method="post" class="inline">
                                <button type="submit" class="text-xs bg-red-100 text-red-700 py-1 px-2 rounded hover:bg-red-200">Cancel</button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<!-- Add/Edit Car Modal (Admin) -->
<div id="car-modal" class="modal modal-inactive fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 p-4">
    <div class="bg-white rounded-lg shadow-xl w-full max-w-lg p-6">
        <h3 class="text-2xl font-semibold mb-4" id="car-modal-title">Add New Car</h3>
        
        <!-- This form will POST to the SaveCar action -->
        <form id="car-form" asp-action="SaveCar" method="post" class="space-y-4">
            <input type="hidden" id="car-id" name="Id" value="0" /> <!-- 0 for new car -->
            
            <div>
                <label for="car-name" class="block text-sm font-medium text-gray-700">Car Name</label>
                <input type="text" id="car-name" name="Name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
            </div>
            <div>
                <label for="car-type" class="block text-sm font-medium text-gray-700">Car Type</label>
                <select id="car-type" name="Type" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
                    <option value="Sedan">Sedan</option>
                    <option value="SUV">SUV</option>
                    <option value="Truck">Truck</option>
                    <option value="Van">Van</option>
                    <option value="Coupe">Coupe</option>
                </select>
            </div>
             <div>
                <label for="car-price" class="block text-sm font-medium text-gray-700">Price per Day ($)</label>
                <input type="number" id="car-price" name="Price" min="0" step="1" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
            </div>
            <div>
                <label for="car-image" class="block text-sm font-medium text-gray-700">Image URL</label>
                <input type="text" id="car-image" name="Img" placeholder="https://placehold.co/600x400" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm" required>
            </div>
            <div class="flex justify-end space-x-3 pt-4">
                <button type="button" id="cancel-car-form-btn" class="bg-gray-300 text-gray-800 py-2 px-4 rounded-md font-semibold hover:bg-gray-400 transition">Cancel</button>
                <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-md font-semibold hover:bg-blue-700 transition">Save Car</button>
            </div>
        </form>
    </div>
</div>
